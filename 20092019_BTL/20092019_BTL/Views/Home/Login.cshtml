@{
    ViewData["Title"] = "Login";
}

<div class="container h-80">
    <div class="row align-items-center h-100">
        <div class="col-3 mx-auto">
            <div class="text-center">
                <img id="profile-img" style="width: 37%" class="rounded-circle profile-img-card" src="https://i.imgur.com/6b6psnA.png" />
                <p id="profile-name" class="profile-name-card"></p>
                <form class="form-signin" method="get">
                    <div class="row">
                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                            <input type="password" name="password" id="inputPassword" class="form-control form-group" placeholder="password" required autofocus><br />
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                    <div class="row">
                    @*<input style="width: 30%" type="password" name="password" id="inputPassword" class="form-control form-group" placeholder="password" required autofocus><br />*@
                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                            <button class="btn btn-lg btn-primary btn-block btn-signin" style="width: 100%" type="submit">Đăng nhập</button>
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </form><!-- /form -->
            </div>
        </div>
    </div>
</div>