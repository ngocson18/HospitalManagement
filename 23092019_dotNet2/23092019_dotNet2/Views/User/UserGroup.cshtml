@model  System.Data.DataTable
using System.Data;

@{
    ViewBag.Title = "UserGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-12 user_group">
    <div class="card">
        <div class="card-header">
            <div class="float-right">
                <form>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search">
                        <div class="input-group-btn">
                            <button class="btn btn-secondary"><i class="ion ion-search"></i></button>
                        </div>
                    </div>
                </form>
            </div>
            <h4>Danh sách nhóm người dùng</h4>
            <button data-toggle="modal" data-target="#myModal" style="width: 10%" type="button"
                    class="btn btn-success">
                <i class="fas fa-plus-circle mr-1"></i>Thêm mới
            </button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <tr>
                        <th>
                            STT
                        </th>
                        <th>
                            Nhóm
                        </th>
                        <th>
                            Mô tả
                        </th>
                        <th>Người tạo</th>
                        <th>Thời gian tạo</th>
                        <th>
                            Trạng thái
                        </th>
                        <th>Thao tác</th>
                        @*@foreach (System.Data.DataColumn col in Model.Columns)
                        {
                            <th>@col.Caption</th>
                        }*@
                    </tr>
                    @foreach (System.Data.DataRow row in Model.Rows)
                    {
                    <tr>
                        @foreach (var cell in row.ItemArray)
                        {
                            if (cell != null)
                            {
                                <td>
                                    @cell.ToString()
                                </td>
                            }
                            else
                            {
                                <td></td>
                            }
                        }
                    </tr>
                    }
                </table>
            </div>
        </div>
    </div>

    @section Modal_AddGroupUser
    {
        <!-- The Modal -->
        <div class="modal fade mt-5" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h6 class="modal-title">Thêm nhóm</h6>
                        <button type="button" class="close" data-dismiss="modal">x</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="col-md-12">

                            <div class="form-group">
                                <label for="name">Tên nhóm:</label>
                                <input type="text" class="form-control" id="name">
                            </div>
                            <div class="form-group">
                                <label for="describe">Mô tả:</label>
                                <input type="text" class="form-control" id="describe">
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox"> Ngừng hoạt động
                                </label>
                            </div>
                            <button type="submit" id="myBtn" class="btn btn-primary">
                                Lưu
                                @*<a href="https://www.w3schools.com/html/">Lưu</a>*@
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    }
</div>


