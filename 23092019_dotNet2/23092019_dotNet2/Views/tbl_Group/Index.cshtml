@*@model IEnumerable<_23092019_dotNet2.Models.tbl_Group>*@
@model PagedList.IPagedList<_23092019_dotNet2.Models.tbl_Group>
@using PagedList.Mvc;

@{
    ViewBag.Title = "UserGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12 user_group">
    <div class="card">
        <div class="card-header">
            <div class="float-right">
                <form>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search">
                        <div class="input-group-btn">
                            <button class="btn btn-secondary"><i class="ion ion-search"></i></button>
                        </div>
                    </div>
                </form>
            </div>
            <h4>Danh sách nhóm người dùng</h4>

            <button style="width: 10%" type="button" class="btn btn-success"><i class="fas fa-plus-circle mr-1"></i>@Html.ActionLink("Create New", "Create")</button>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <tr>
                        <th>STT</th>
                        <th>
                            Nhóm
                        </th>
                        <th>
                            Mô tả
                        </th>
                        @*<th>Người tạo</th>
                            <th>Thời gian tạo</th>*@
                        @*<th>
                                Trạng thái
                            </th>*@
                        <th>Thao tác</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="counterCell"></td>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.description)
                            </td>

                            @*@Html.DisplayFor(modelItem => item.status)*@
                            @*@if (item.status == 0)
                                {
                                    <label>Ngừng hoạt động</label>
                                }
                                else if (item.status == 1)
                                {
                                    <label>Đang hoạt động</label>
                                }*@

                            <td>
                                <button class="w3-button w3-khaki w3-circle w3-teal">@Html.ActionLink("Sửa", "Edit", new { id = item.id })</button>
                                <button class="w3-button  w3-circle w3-red">@Html.ActionLink("Xóa", "Delete", new { id = item.id })</button>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Thêm mã phân trang -->
<div class="col-md-12 ml-2">
    <strong>Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount </strong>
    <br />
    <div class="pagination mt-3">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>
<!-- Kết thúc -->

<script>
    function CloseModalPopup() {
        $("#myModal").modal('hide');
    }
</script>