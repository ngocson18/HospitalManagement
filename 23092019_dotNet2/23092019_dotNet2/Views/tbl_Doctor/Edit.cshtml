@model _23092019_dotNet2.Models.tbl_User

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h3>Chỉnh sửa người dùng</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <div class="row">
                <div class="form-group col-6">
                    <div class="control-label col-md-12">
                        Tên người dùng
                    </div>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-6">
                    <div class="control-label col-md-12">
                        Username
                    </div>
                    <div class="col-12">
                        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-6">
                    <div class="control-label col-md-12">
                        Ngày sinh
                    </div>
                    <div class="col-12">
                        @Html.EditorFor(model => model.dob, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.dob, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-6">
                    <div class="control-label col-md-12">
                        Nhóm
                    </div>
                    <div class="col-12">
                        @Html.DropDownList("departmentId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.departmentId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-6">
                    <div class="control-label col-md-12">
                        Giới tính
                    </div>
                    <div class="col-12">
                        @*@Html.EditorFor(model => model.gender, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.DropDownListFor(model => model.gender, new List<SelectListItem>
                            {
                                new SelectListItem { Text = "Nam", Value = "1", Selected=true},
                                new SelectListItem { Text = "Nữ", Value = "0"},
                                new SelectListItem { Text = "LGBT", Value = "3"}
                            }, "Chọn giới tính",
                            new { style = "width: 100%; height: 44px; border: none" })
                        @Html.ValidationMessageFor(model => model.gender, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-6">
                    <div class="control-label col-md-12">
                        Số điện thoại
                    </div>
                    <div class="col-12">
                        @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-12">
                    <div class="control-label col-md-12">
                        Email
                    </div>
                    <div class="col-12">
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </div>
                </div>

                @*<div class="form-group col-6">
                        <div class="control-label col-md-12">
                            Trạng thái
                        </div>
                        <div class="col-12">
                            @Html.EditorFor(model => model.status, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                        </div>
                    </div>*@

                <div class="form-group col-12">
                    <div class="col-md-offset-2 col-12">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    }

    <divc class="col-12">
        @Html.ActionLink("Back to List", "Index")
    </divc>
</div>