@model IEnumerable<_23092019_dotNet2.Models.tbl_User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12 doctor_list">
    <div class="card">
        <div class="card-header">
            <div class="float-right">
                <form>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search">
                        <div class="input-group-btn">
                            <button class="btn btn-secondary"><i class="ion ion-search"></i></button>
                        </div>
                    </div>
                </form>
            </div>
            <h4>Danh sách bác sĩ</h4>
            <button style="width: 10%" type="button" class="btn btn-success"><i class="fas fa-plus-circle mr-1"></i>@Html.ActionLink("Thêm mới", "Create")</button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <tr>
                        <th>
                            Họ tên
                        </th>
                        <th>
                            Giới tính
                        </th>
                        <th>
                            SĐT
                        </th>
                        <th>
                            Email
                        </th>
                        <th>Thao tác</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @if(item.gender == 1)
                                {
                                    <label>Nam</label>
                                }
                                else if(item.gender ==0) {
                                    <label>Nữ</label>
                                }
                                else if(item.gender == 3)
                                {
                                    <label>GT khác</label>
                                }
                                @*@Html.DisplayFor(modelItem => item.gender)*@
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.email)
                            </td>
                            <td>
                                <button type="button" class="button-custom btn btn-info">
                                    <i class="fas fa-edit">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.id })
                                    </i>
                                </button>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
