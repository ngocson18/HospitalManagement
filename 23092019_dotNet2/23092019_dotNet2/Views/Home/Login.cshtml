<script src="~/Content/modules/moment.min.js"></script>
<script src="~/Content/modules/scroll-up-bar/dist/scroll-up-bar.min.js"></script>
<script src="~/Content/js/sa-functions.js"></script>

<script src="~/Content/js/scripts.js"></script>
<script src="~/Content/js/custom.js"></script>
<script src="~/Content/js/demo.js"></script>
</body>

